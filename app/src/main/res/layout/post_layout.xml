<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:id="@+id/post_artist_photo_holder"
            android:layout_centerVertical="true"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_profile"
                android:id="@+id/post_artist_photo_view"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist Name"
            android:layout_toRightOf="@id/post_artist_photo_holder"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/post_artist_name_view"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/ic_share"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:id="@+id/post_share_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_share_count_view"
            android:layout_below="@id/post_share_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="64"
            android:textSize="8sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/post_video_view" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_seen"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/post_seenImage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="3.1 mn"
            android:layout_centerVertical="true"
            android:id="@+id/post_viewsCount_view"
            android:layout_toRightOf="@id/post_seenImage"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dislike"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/post_dislike_btn"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="10"
            android:layout_below="@id/post_dislike_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/post_dislike_count_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="87"
            android:layout_below="@id/post_like_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:id="@+id/post_like_count_view"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/post_dislike_btn"
            android:id="@+id/post_like_btn"
            android:layout_margin="5dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textFontWeight="20"
        android:text="Title"
        android:id="@+id/post_title_view"
        android:layout_margin="5dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_desc_view"
        android:text="Description"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Captions"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:textAllCaps="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comment_recycler_view"
        android:layout_margin="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>