<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:id="@+id/friend_request_photo_view_holder"
        android:layout_centerVertical="true"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile"
            android:id="@+id/friend_request_photo_view"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_toRightOf="@id/friend_request_photo_view_holder"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:id="@+id/friend_request_name_view"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:id="@+id/friend_request_deny_btn"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/friend_request_deny_btn"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_check"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:id="@+id/friend_request_accept_btn"/>


</RelativeLayout>